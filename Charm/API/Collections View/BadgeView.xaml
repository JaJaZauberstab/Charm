<UserControl
    x:Class="Charm.BadgeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Charm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="945"
    d:DesignWidth="1914"
    Loaded="OnControlLoaded"
    mc:Ignorable="d">

    <UserControl.Resources>

        <DataTemplate x:Key="ItemTemplate">
            <Button
                Height="auto"
                Margin="0"
                local:StyleHelper.BorderThickness="0.75"
                Focusable="False"
                MouseEnter="PlugItem_MouseEnter"
                MouseLeave="PlugItem_MouseLeave"
                MouseRightButtonDown="Button_MouseRightButtonDown"
                Style="{DynamicResource D2StyleButton}">
                <local:CollectionItemControl />
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="SubcategoryItemTemplate">
            <RadioButton
                Margin="0,0,0,0"
                Checked="Subcategory_OnSelect"
                Focusable="False"
                GroupName="Subcategory"
                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                MouseEnter="CategoryButton_MouseEnter"
                MouseLeave="PlugItem_MouseLeave"
                Style="{DynamicResource D2StyleCircleRadioButton}">
                <Border>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <!--  Trigger when IsSelected (IsChecked) is false  -->
                                <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                    <Setter Property="Opacity" Value="0.5" />
                                </DataTrigger>
                                <!--  Trigger when IsSelected (IsChecked) is true  -->
                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="Opacity" Value="1.0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image Source="{Binding ItemCategoryIcon}" />
                </Border>
            </RadioButton>
        </DataTemplate>

        <DataTemplate x:Key="PlaceholderTemplate">
            <Border Margin="0" Background="#50505055" />
        </DataTemplate>

        <DataTemplate x:Key="PlaceholderTemplate2">
            <Border Margin="0" Background="#50505055" />
        </DataTemplate>


        <local:ItemTemplateSelector
            x:Key="ItemTemplateSelector"
            NormalItemTemplate="{StaticResource ItemTemplate}"
            PlaceholderTemplate="{StaticResource PlaceholderTemplate}" />

        <Storyboard x:Key="TextChangeAnimation">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1.0"
                Duration="0:0:0.4" />
            <ThicknessAnimation
                Storyboard.TargetProperty="Margin"
                From="30,0,0,0"
                To="0,0,0,0"
                Duration="0:0:0.4">
                <ThicknessAnimation.EasingFunction>
                    <SineEase EasingMode="EaseOut" />
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <Storyboard x:Key="FadeIn 0.3">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="FadeIn 0.2">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="FadeIn 0.1">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.1" />
        </Storyboard>


    </UserControl.Resources>

    <Grid x:Name="MainGrid" Focusable="False">
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.25" GradientOrigin="0.5,0.25" RadiusX="1" RadiusY="1">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Offset="0" Color="#FF37393E" />
                    <GradientStop Offset="0.8" Color="#111113" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>
        </Grid.Background>

        <Grid
            Name="ItemRarityBanner"
            Width="auto"
            Height="55"
            VerticalAlignment="Top"
            Panel.ZIndex="1"
            Background="Transparent"
            Visibility="Collapsed">
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Offset="1" Color="#75BE9F28" />
                        <GradientStop Offset="0" Color="#75BE9F28" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Margin="0,45,0,0">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Offset="1" Color="#75BE9F28" />
                        <GradientStop Offset="0" Color="#75BE9F28" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

        <Grid
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="Transparent"
            Opacity="1">
            <Border
                x:Name="Spinner"
                Background="Transparent"
                BorderThickness="0"
                Opacity="1" />
        </Grid>

        <Grid
            x:Name="MainContainer"
            Background="Transparent"
            RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TranslateTransform />
            </Grid.RenderTransform>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:0.25" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>

            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="90*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="2"
                Margin="50,0,50,50"
                Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>

                <Grid
                    x:Name="Header"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent">
                    <StackPanel
                        Margin="50,0,50,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        Orientation="Vertical">

                        <Border
                            Grid.Row="1"
                            Grid.Column="2"
                            Height="10"
                            Margin="0,0,0,50"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            BorderBrush="{StaticResource ForegroundColour50}"
                            BorderThickness="0,0,0,1" />

                        <Image
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            d:Source="https://www.bungie.net/common/destiny2_content/icons/2fbdcc98d198476250fc5fc75f6ddf28.png"
                            Source="{Binding ItemCategoryIcon2}" />

                        <Grid Margin="0,20,0,0" Background="Transparent">
                            <StackPanel>
                                <TextBlock
                                    x:Name="CategoryName"
                                    Margin="0,0,0,5"
                                    Panel.ZIndex="1"
                                    d:FontFamily="Haas Grot Text 65 Medium"
                                    d:Text="DUNGEON: VESPER'S HOST"
                                    FontFamily="{DynamicResource Haas Grot Text 65 Medium Keys}"
                                    FontSize="40"
                                    Foreground="{StaticResource ForegroundColour90}"
                                    Text="{Binding ItemCategoryName}"
                                    TextWrapping="Wrap" />

                                <TextBlock
                                    x:Name="CategoryDescription"
                                    Panel.ZIndex="1"
                                    d:FontFamily="Haas Grot Text 55 Roman"
                                    d:Text="Trophies from the &quot;Vesper's Host&quot; dungeon."
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                    FontSize="22"
                                    Foreground="{StaticResource ForegroundColour50}"
                                    Text="{Binding ItemCategoryDescription}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Border
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Height="auto"
                    Margin="40,15,0,15"
                    HorizontalAlignment="Left"
                    BorderBrush="{StaticResource BackgroundColour50}"
                    BorderThickness="0,0,2,0"
                    Visibility="Visible" />

                <Grid
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="50,0,15,15"
                    Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="90*" />
                    </Grid.RowDefinitions>

                    <!--  Categories  -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,10"
                        VerticalAlignment="Top"
                        Background="Transparent">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <ItemsControl x:Name="Subcategories" ItemTemplate="{StaticResource SubcategoryItemTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid
                                            Grid.Row="0"
                                            Width="auto"
                                            Height="auto"
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Background="Transparent"
                                            Rows="1" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="10" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>

                        </StackPanel>
                    </Grid>

                    <!--  Left Navigation Button  -->
                    <Button
                        x:Name="PreviousPage"
                        Grid.Row="1"
                        Width="40"
                        Margin="0,0,5,0"
                        local:StyleHelper.BorderThickness="1"
                        Click="PreviousPage_Click"
                        Focusable="False"
                        Style="{DynamicResource D2StyleButton}"
                        Visibility="Hidden">
                        <Border Background="#9E6C6C6C">
                            <Polygon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="White"
                                Points="0, 0 80, 50, 0, 100">
                                <Polygon.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.15" ScaleY="0.15" />
                                        <SkewTransform />
                                        <RotateTransform Angle="180" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </Polygon.LayoutTransform>
                            </Polygon>
                        </Border>
                    </Button>

                    <!--  Items Control  -->
                    <ItemsControl
                        Name="SingleItemList"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        Background="Transparent"
                        ItemTemplateSelector="{StaticResource ItemTemplateSelector}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Margin="0,-4,0,-4" Columns="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Margin" Value="4" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>

                    <!--  Right Navigation Button  -->
                    <Button
                        x:Name="NextPage"
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="40"
                        Margin="5,0,0,0"
                        local:StyleHelper.BorderThickness="1"
                        Click="NextPage_Click"
                        Focusable="False"
                        Style="{DynamicResource D2StyleButton}"
                        Visibility="Collapsed">
                        <Border Background="#9E6C6C6C">
                            <Polygon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="White"
                                Points="0, 0 80, 50, 0, 100">
                                <Polygon.LayoutTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.15" ScaleY="0.15" />
                                        <SkewTransform />
                                        <RotateTransform Angle="0" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </Polygon.LayoutTransform>
                            </Polygon>
                        </Border>
                    </Button>
                </Grid>


                <Border
                    Grid.Row="1"
                    Width="10"
                    Height="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="{StaticResource ForegroundColour50}"
                    BorderThickness="0,0,1,1" />
                <Border
                    Grid.Row="1"
                    Width="10"
                    Height="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource ForegroundColour50}"
                    BorderThickness="0,1,1,0" />
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="10"
                    Height="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    BorderBrush="{StaticResource ForegroundColour50}"
                    BorderThickness="1,1,0,0" />
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="10"
                    Height="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    BorderBrush="{StaticResource ForegroundColour50}"
                    BorderThickness="1,0,0,1" />
            </Grid>
        </Grid>

        <!--  User Controls  -->
        <Grid VerticalAlignment="Bottom" Background="#38000000">
            <StackPanel
                Margin="0,10,150,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FlowDirection="RightToLeft"
                Orientation="Horizontal">

                <TextBlock
                    Margin="0,0,25,0"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1"
                    d:FontFamily="Haas Grot Text 55 Roman, Destiny Keys"
                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                    FontSize="20"
                    Foreground="{StaticResource ForegroundColour80}"
                    Text=" Dismiss"
                    TextAlignment="Left"
                    TextWrapping="Wrap" />

            </StackPanel>

        </Grid>
    </Grid>

</UserControl>
