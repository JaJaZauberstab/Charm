<UserControl
    x:Class="Charm.AudioListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Charm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wrap="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    d:DesignHeight="990"
    d:DesignWidth="1920"
    Loaded="OnControlLoaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="PackageItemTemplate">
            <RadioButton
                Margin="0,0,0,0"
                local:StyleHelper.BorderThickness="1"
                Checked="PackageItem_Checked"
                Focusable="False"
                Foreground="Transparent"
                GroupName="PackageItem"
                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                Style="{DynamicResource D2StyleRadioButton}">
                <StackPanel Background="{StaticResource BackgroundColour14a}">
                    <TextBlock
                        Margin="15,10,15,10"
                        HorizontalAlignment="Left"
                        d:FontFamily="Haas Grot Text 55 Roman"
                        FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                        FontSize="18"
                        Foreground="{StaticResource ForegroundColour100}"
                        Text="{Binding Name}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <!--  Trigger when IsSelected (IsChecked) is false  -->
                                    <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                        <Setter Property="Opacity" Value="0.75" />
                                    </DataTrigger>
                                    <!--  Trigger when IsSelected (IsChecked) is true  -->
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="Opacity" Value="1.0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock
                        Margin="15,5,15,10"
                        HorizontalAlignment="Left"
                        d:FontFamily="Haas Grot Text 55 Roman"
                        FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                        FontSize="16"
                        Foreground="{StaticResource ForegroundColour70}">
                        <Run Text="Sounds: " />
                        <Run Text="{Binding Count}" />
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <!--  Trigger when IsSelected (IsChecked) is false  -->
                                    <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                        <Setter Property="Opacity" Value="0.75" />
                                    </DataTrigger>
                                    <!--  Trigger when IsSelected (IsChecked) is true  -->
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="Opacity" Value="1.0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

            </RadioButton>
        </DataTemplate>

        <DataTemplate x:Key="AudioTemplate">
            <RadioButton
                Width="500"
                MaxHeight="128"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                local:StyleHelper.BorderThickness="1"
                Click="Audio_OnClick"
                Focusable="False"
                GroupName="AudioItem"
                Loaded="Tag_Loaded"
                Style="{DynamicResource D2StyleRadioButton}"
                Unloaded="Tag_Unloaded">
                <Border Background="{StaticResource BackgroundColour14a}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="5" Orientation="Vertical">
                            <TextBlock
                                Margin="0"
                                HorizontalAlignment="Left"
                                d:FontFamily="Haas Grot Text 55 Roman"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                FontSize="16"
                                Foreground="{StaticResource ForegroundColour70}"
                                Text="{Binding DisplayHash}" />

                            <TextBlock
                                Margin="0"
                                HorizontalAlignment="Left"
                                d:FontFamily="Haas Grot Text 55 Roman"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                FontSize="16"
                                Foreground="{StaticResource ForegroundColour70}">
                                <Run Text="Duration: " />
                                <Run Text="{Binding Duration}" />
                            </TextBlock>

                            <TextBlock
                                Margin="0"
                                HorizontalAlignment="Left"
                                d:FontFamily="Haas Grot Text 55 Roman"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                FontSize="16"
                                Foreground="{StaticResource ForegroundColour70}">
                                <Run Text="Sample Rate: " />
                                <Run Text="{Binding SampleRate}" />
                            </TextBlock>

                            <TextBlock
                                Margin="0"
                                HorizontalAlignment="Left"
                                d:FontFamily="Haas Grot Text 55 Roman"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                FontSize="16"
                                Foreground="{StaticResource ForegroundColour70}">
                                <Run Text="Channels: " />
                                <Run Text="{Binding Channels}" />
                            </TextBlock>
                        </StackPanel>
                        <Image
                            x:Name="Waveform"
                            Grid.Row="0"
                            MaxWidth="300"
                            MaxHeight="100"
                            Margin="15"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            Stretch="Uniform"
                            Visibility="Collapsed" />
                    </StackPanel>

                </Border>
            </RadioButton>
        </DataTemplate>

        <Style x:Name="AudioListViewItem" TargetType="ListViewItem">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border
                            x:Name="ButtonBackground"
                            Background="Transparent"
                            BorderBrush="{StaticResource BackgroundColour30}"
                            BorderThickness="0">
                            <ContentPresenter Margin="0" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Style="{StaticResource GradientBackground}">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:0.25" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <Grid
            x:Name="SpinnerContainer"
            Grid.RowSpan="2"
            Background="Transparent"
            Opacity="1"
            Visibility="Hidden">
            <Border
                x:Name="Spinner"
                Background="Transparent"
                BorderThickness="0"
                Opacity="1" />
        </Grid>

        <Grid x:Name="MainContainer" Background="Transparent">
            <Grid.RenderTransform>
                <TranslateTransform />
            </Grid.RenderTransform>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="30*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Column="0"
                Margin="10"
                Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="95*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.RowSpan="2"
                    Margin="0,15,0,15"
                    BorderBrush="{StaticResource ForegroundColour70}"
                    BorderThickness="0,0,1,0" />

                <TextBox
                    x:Name="SearchBox"
                    Grid.Row="0"
                    Margin="15,0,15,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="30"
                    TextChanged="SearchBox_TextChanged"
                    TextWrapping="Wrap" />

                <ListView
                    x:Name="PackageList"
                    Grid.Row="1"
                    Margin="0,10,15,5"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemTemplate="{StaticResource PackageItemTemplate}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Grid.Row="0"
                                Width="auto"
                                Height="auto"
                                Margin="10,5,10,5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                Columns="1" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Grid>

            <Grid
                Grid.Column="1"
                Margin="0,10,0,10"
                Background="Transparent">

                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="95*" />
                </Grid.RowDefinitions>

                <StackPanel
                    x:Name="FilterOptions"
                    Grid.Row="0"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="AudioSearchBox"
                        Grid.Row="0"
                        Width="250"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="30"
                        TextChanged="AudioSearchBox_TextChanged"
                        TextWrapping="Wrap" />

                </StackPanel>


                <ListView
                    x:Name="AudioList"
                    Grid.Row="1"
                    Margin="0,10,0,5"
                    Background="Transparent"
                    BorderBrush="{StaticResource ForegroundColour70}"
                    BorderThickness="0,0,1,0"
                    ItemTemplate="{StaticResource AudioTemplate}"
                    Style="{DynamicResource AudioListViewItem}"
                    VirtualizingPanel.IsContainerVirtualizable="True"
                    VirtualizingPanel.ScrollUnit="Pixel">

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <wrap:VirtualizingWrapPanel HorizontalAlignment="Left" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Grid>

            <Grid Grid.Column="2" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="95*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <ContentControl
                    x:Name="WaveformLoading"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Template="{StaticResource SpinningCircleTemplate}"
                    Visibility="Collapsed" />

                <Grid
                    Name="WaveformContainer"
                    Grid.ColumnSpan="3"
                    Margin="15"
                    VerticalAlignment="Center"
                    Panel.ZIndex="10"
                    Background="Transparent">

                    <Rectangle
                        x:Name="WaveformProgressBar"
                        Width="0"
                        MaxHeight="720"
                        Fill="#009BFB"
                        Opacity="1">
                        <Rectangle.OpacityMask>
                            <ImageBrush ImageSource="{Binding Source, ElementName=Waveform}" Stretch="Uniform" />
                        </Rectangle.OpacityMask>
                        <Rectangle.Clip>
                            <RectangleGeometry x:Name="WaveformTintClip" />
                        </Rectangle.Clip>
                    </Rectangle>

                    <Image
                        x:Name="Waveform"
                        Grid.Row="0"
                        MaxHeight="720"
                        Panel.ZIndex="-10"
                        IsHitTestVisible="False"
                        Stretch="Uniform" />
                </Grid>


                <local:MusicPlayerControl
                    x:Name="MusicPlayer"
                    Grid.Row="0"
                    Height="100"
                    VerticalAlignment="Bottom"
                    Visibility="Visible" />

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Border Margin="5" Background="{StaticResource BackgroundColour20}">
                        <Button
                            x:Name="ExportButton"
                            Click="ExportButton_Click"
                            IsEnabled="False"
                            MouseEnter="ExportButtons_MouseEnter"
                            MouseLeave="ExportButtons_MouseLeave"
                            Style="{StaticResource D2StyleButton}"
                            Tag="EXPORT:Export the current sound.">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="22"
                                IsHitTestVisible="False"
                                Text="EXPORT CURRENT"
                                TextAlignment="Center" />
                        </Button>
                    </Border>

                    <Border Margin="5" Background="{StaticResource BackgroundColour20}">
                        <Button
                            x:Name="BulkExportButton"
                            Grid.Row="1"
                            Click="BulkExportButton_Click"
                            IsEnabled="False"
                            MouseEnter="ExportButtons_MouseEnter"
                            MouseLeave="ExportButtons_MouseLeave"
                            Style="{StaticResource D2StyleButton}"
                            Tag="EXPORT ALL:Export all sounds from this package.">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="22"
                                IsHitTestVisible="False"
                                Text="EXPORT ALL"
                                TextAlignment="Center" />
                        </Button>
                    </Border>

                    <Border
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="{StaticResource BackgroundColour20}">
                        <Button
                            x:Name="ExportWaveform"
                            Click="ExportWaveform_Click"
                            IsEnabled="False"
                            MouseEnter="ExportButtons_MouseEnter"
                            MouseLeave="ExportButtons_MouseLeave"
                            Style="{StaticResource D2StyleButton}"
                            Tag="EXPORT:Export the current sounds waveform as an image.">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="22"
                                IsHitTestVisible="False"
                                Text="EXPORT WAVEFORM"
                                TextAlignment="Center" />
                        </Button>
                    </Border>
                </StackPanel>

            </Grid>
        </Grid>

    </Grid>
</UserControl>
