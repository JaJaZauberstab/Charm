<UserControl
    x:Class="Charm.TextureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Charm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="960"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:0.25" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent">
            <StackPanel Orientation="Vertical">
                <Border Width="700" Height="700">
                    <Image
                        x:Name="Image"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="{Binding Image}" />
                </Border>


                <Border BorderBrush="{StaticResource ForegroundColour50}" BorderThickness="1">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Margin="5"
                            Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                                FontSize="20"
                                IsHitTestVisible="False"
                                Text="{Binding Hash}"
                                TextAlignment="Center" />
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                                FontSize="20"
                                IsHitTestVisible="False"
                                Text="{Binding Dimensions}"
                                TextAlignment="Center" />
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                                FontSize="20"
                                IsHitTestVisible="False"
                                Text="{Binding Format}"
                                TextAlignment="Center" />
                        </StackPanel>

                        <StackPanel
                            x:Name="SliceViewer"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                                    FontSize="20"
                                    IsHitTestVisible="False"
                                    Text="3D Texture Slice"
                                    TextAlignment="Center" />

                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                                    <!--  Back Button  -->
                                    <Button
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Click="Slice_OnBackClicked"
                                        Content="⮜"
                                        FontSize="24"
                                        Style="{StaticResource D2StyleButton}" />

                                    <TextBlock
                                        Grid.Column="1"
                                        Width="75"
                                        Margin="10,0,10,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                                        FontSize="20"
                                        IsHitTestVisible="False"
                                        TextAlignment="Center">
                                        <Run Text="{Binding CurrentSlice}" />
                                        <Run Text="/" />
                                        <Run Text="{Binding SliceAmount}" />
                                    </TextBlock>

                                    <!--  Forward Button  -->
                                    <Button
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Click="Slice_OnForwardClicked"
                                        Content="⮞"
                                        FontSize="24"
                                        Style="{StaticResource D2StyleButton}" />
                                </StackPanel>
                            </StackPanel>

                            <CheckBox
                                x:Name="FlattenVolume"
                                Grid.Column="0"
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsChecked="False"
                                Style="{StaticResource MaterialDesignCheckBox}"
                                Visibility="Visible">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                                    FontSize="18"
                                    IsHitTestVisible="False"
                                    Text="Export All Slices"
                                    TextAlignment="Center" />
                            </CheckBox>

                        </StackPanel>

                    </Grid>

                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
