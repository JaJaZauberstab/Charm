<UserControl
    x:Class="Charm.ComboBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Charm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="1920"
    mc:Ignorable="d">

    <Grid
        x:Name="Settings"
        Margin="0,0,0,0"
        Background="#53000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            Margin="20,0,20,0"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="0,3,0,3"
                VerticalAlignment="Center"
                FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                FontSize="{Binding FontSize}"
                Text="{Binding Text}"
                TextWrapping="Wrap" />
            <TextBlock
                Margin="0,0,0,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="{DynamicResource Haas Grot Text 55 Roman}"
                FontSize="{Binding LabelFontSize}"
                Foreground="{StaticResource ForegroundColour50}"
                Text="{Binding Label}"
                TextWrapping="Wrap">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Label}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>

        <Button
            Grid.Column="2"
            Margin="0"
            Style="{DynamicResource D2StyleButton}">
            <ComboBox
                x:Name="Combobox"
                BorderBrush="Transparent"
                BorderThickness="1"
                IsReadOnly="False"
                Style="{DynamicResource D2StyleComboBox}" />
        </Button>
    </Grid>
</UserControl>
