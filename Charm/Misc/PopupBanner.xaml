<UserControl
    x:Class="Charm.PopupBanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Charm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="1920"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local:SpacedTextConverter x:Key="SpacedTextConverter" />
        <QuinticEase x:Key="EaseOut" EasingMode="EaseInOut" />

        <Storyboard x:Key="PopupFadeAnimation" Completed="FadeOutAnimation_Completed">
            <DoubleAnimation
                Storyboard.TargetName="ElementStack"
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.05" />
        </Storyboard>

        <Style TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid
                            x:Name="TemplateRoot"
                            Background="Transparent"
                            SnapsToDevicePixels="true">
                            <!--  Background  -->
                            <Border
                                x:Name="PART_Track"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True" />
                            <!--  Progress Bar  -->
                            <Border
                                x:Name="PART_Indicator"
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                HorizontalAlignment="Left"
                                Background="{TemplateBinding Foreground}"
                                SnapsToDevicePixels="True" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!--  Trigger for Fade-In Animation  -->
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="PART_Indicator"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0"
                                            To="1"
                                            Duration="0:0:2.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid
        x:Name="MainGrid"
        Panel.ZIndex="100"
        d:Background="#7F7F7F"
        Background="Transparent">

        <Border
            x:Name="ElementStack"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="100" ShadowDepth="0" />
            </Border.Effect>

            <StackPanel Orientation="Vertical">
                <Grid
                    Name="Expanders"
                    d:Opacity="1"
                    Background="Transparent"
                    Opacity="0">
                    <!--  Left Piece (Expands Left)  -->
                    <Rectangle
                        Name="LeftPiece"
                        Width="0"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Panel.ZIndex="15"
                        d:Fill="#88007490"
                        d:Width="1920"
                        Fill="{Binding ExpanderColor}" />

                    <!--  Right Piece (Expands Right)  -->
                    <Rectangle
                        Name="RightPiece"
                        Width="0"
                        Height="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Panel.ZIndex="15"
                        d:Fill="#88007490"
                        d:Width="1920"
                        Fill="{Binding ExpanderColor}" />
                </Grid>

                <Grid
                    Name="Info"
                    d:Opacity="1"
                    Background="#80131313"
                    Opacity="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*" />
                        <ColumnDefinition Width="70*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#4D000000">
                        <TextBlock
                            Margin="25"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            d:FontFamily="Haas Grot Text 55 Roman"
                            d:Foreground="#C90092B6"
                            d:Text="✅"
                            FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                            FontSize="100"
                            FontWeight="Bold"
                            Foreground="{Binding IconColor}"
                            Text="{Binding Icon}" />
                    </Border>
                    <Image
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Source="{Binding IconImage}"
                        Visibility="Visible" />

                    <StackPanel
                        Grid.Column="1"
                        Background="Transparent"
                        Orientation="Vertical">
                        <Border
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            d:Background="#4B007490"
                            Background="{Binding BodyColor}">
                            <TextBlock
                                Margin="20"
                                d:FontFamily="Haas Grot Text 55 Roman"
                                d:Text="H E L L O"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                FontSize="36"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Title, Converter={StaticResource SpacedTextConverter}}" />
                        </Border>

                        <Border Background="Transparent">
                            <StackPanel Margin="20,20,300,20" Orientation="Vertical">
                                <TextBlock
                                    x:Name="SubtitleText"
                                    d:FontFamily="Haas Grot Text 55 Roman"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                    FontSize="26"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource ForegroundColour90}"
                                    TextWrapping="WrapWithOverflow">
                                    <Run d:Text="Subtitle" Text="{Binding Subtitle}" />
                                    <Run Text="&#x0a;" />
                                </TextBlock>

                                <TextBlock
                                    x:Name="DescriptionText"
                                    d:FontFamily="Haas Grot Text 55 Roman"
                                    d:Text="Description"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                    FontSize="24"
                                    Text="{Binding Description}"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                        </Border>

                    </StackPanel>

                </Grid>

                <Grid
                    Name="Input"
                    Background="#E60D0D0D"
                    Opacity="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*" />
                        <ColumnDefinition Width="70*" />
                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Column="1"
                        Margin="20,5,20,5"
                        Background="Transparent">
                        <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                            <Grid
                                x:Name="MainUserInput"
                                Margin="0,5,5,5"
                                Background="Transparent">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    d:FontFamily="Haas Grot Text 55 Roman"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                    FontSize="20"
                                    Foreground="{StaticResource ForegroundColour80}"
                                    Text=""
                                    TextWrapping="WrapWithOverflow" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    d:FontFamily="Haas Grot Text 55 Roman"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                    FontSize="20"
                                    Foreground="#3396DA"
                                    Text=""
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>

                            <TextBlock
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                d:FontFamily="Haas Grot Text 55 Roman"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                FontSize="20"
                                Foreground="{StaticResource ForegroundColour80}"
                                Text="{Binding UserInput}"
                                TextWrapping="WrapWithOverflow" />

                            <Grid
                                x:Name="SecondaryUserInput"
                                Margin="15,5,5,5"
                                Background="Transparent">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    d:FontFamily="Haas Grot Text 55 Roman"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                    FontSize="20"
                                    Foreground="{StaticResource ForegroundColour80}"
                                    Text=""
                                    TextWrapping="WrapWithOverflow" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    d:FontFamily="Haas Grot Text 55 Roman"
                                    FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                    FontSize="20"
                                    Foreground="#3396DA"
                                    Text=""
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>

                            <TextBlock
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                d:FontFamily="Haas Grot Text 55 Roman"
                                FontFamily="{DynamicResource Haas Grot Text 55 Roman Keys}"
                                FontSize="20"
                                Foreground="{StaticResource ForegroundColour80}"
                                Text="{Binding UserInputSecondary}"
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>

                    </Grid>


                    <Border
                        Grid.Column="1"
                        Panel.ZIndex="-1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0">
                        <ProgressBar
                            x:Name="HoldProgress"
                            Height="auto"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Foreground="#FF6D99FF"
                            Maximum="100"
                            Minimum="0"
                            Value="0" />

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            RepeatBehavior="Forever"
                                            Storyboard.TargetProperty="Opacity"
                                            From="0.5"
                                            To="1.0"
                                            Duration="0:0:0.75">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>


        <!--  Animations  -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="Expanders"
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:0.25" />

                        <!--  Left Piece Expands Left  -->
                        <DoubleAnimation
                            EasingFunction="{StaticResource EaseOut}"
                            Storyboard.TargetName="LeftPiece"
                            Storyboard.TargetProperty="Width"
                            From="0"
                            To="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Duration="0:0:0.35" />


                        <!--  Right Piece Expands Right  -->
                        <DoubleAnimation
                            EasingFunction="{StaticResource EaseOut}"
                            Storyboard.TargetName="RightPiece"
                            Storyboard.TargetProperty="Width"
                            From="0"
                            To="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                            Duration="0:0:0.35" />

                        <!--  Defaults  -->
                        <DoubleAnimation
                            BeginTime="0"
                            Storyboard.TargetName="Info"
                            Storyboard.TargetProperty="Opacity"
                            To="0"
                            Duration="0" />
                        <DoubleAnimation
                            BeginTime="0"
                            Storyboard.TargetName="Input"
                            Storyboard.TargetProperty="Opacity"
                            To="0"
                            Duration="0" />


                        <DoubleAnimation
                            BeginTime="0:0:0.3"
                            Storyboard.TargetName="Info"
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:0.15" />
                        <DoubleAnimation
                            BeginTime="0:0:0.3"
                            Storyboard.TargetName="Input"
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:0.15" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

    </Grid>
</UserControl>
